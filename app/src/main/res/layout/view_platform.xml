<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/platformViewItemSize"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="@dimen/platformViewItemSize"
            android:layout_height="@dimen/platformViewItemSize"
            android:scaleType="center"
            android:contentDescription="@string/description_logo_platform"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/textViewPlatformName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/placeholder_text"
            android:gravity="center"
            android:layout_marginStart="@dimen/width5"
            app:layout_constraintLeft_toRightOf="@id/imageViewLogo"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
