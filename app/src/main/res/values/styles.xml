<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPurple</item>
        <item name="colorPrimaryDark">@color/colorPurpleDarker</item>
        <!-- <item name="colorAccent">@color/colorAccent</item> -->
        <item name="android:textColor">@android:color/black</item>
        <item name="colorAccent">@color/colorPurple</item>
        <item name="toolbarStyle">@style/CustomToolBar</item>
        <item name="actionBarTheme">@style/CustomActionBar</item>
        <item name="android:statusBarColor">@color/colorPurpleDarker</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="CustomToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@android:color/white</item>
    </style>

    <style name="CustomActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorPrimary">@color/colorPurple</item>
    </style>

    <style name="DefaultButtonTheme" parent="@style/AppTheme">
        <item name="colorButtonNormal">@drawable/button_color</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CustomNavigationBar">
        <item name="itemBackground">@color/colorPurple</item>
        <item name="itemTextColor">@android:color/white</item>
        <item name="itemIconTint">@drawable/bottombar_color</item>
    </style>

</resources>
