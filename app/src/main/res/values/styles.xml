<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPurple</item>
        <item name="colorPrimaryDark">@color/colorPurpleDarker</item>
        <!-- <item name="colorAccent">@color/colorAccent</item> -->
        <item name="android:textColor">@android:color/black</item>
        <item name="colorAccent">@color/colorPurple</item>
        <item name="toolbarStyle">@style/CustomToolBar</item>
        <item name="actionBarTheme">@style/CustomActionBar</item>
        <item name="android:statusBarColor">@color/colorPurpleDarker</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="CustomToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@android:color/white</item>
    </style>

    <style name="CustomActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorPrimary">@color/colorPurple</item>
    </style>

    <style name="BotonRedondoColor" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_round</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BotonTransparente" parent="Widget.AppCompat.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CustomNavigationBar">
        <item name="itemTextColor">@android:color/white</item>
        <item name="itemIconTint">@drawable/bottombar_color</item>
        <item name="android:background">@color/colorPurple</item>
    </style>

    <style name="TextViewWithBorder">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">@dimen/shadowDP</item>
        <item name="android:shadowDy">@dimen/shadowDP</item>
        <item name="android:shadowRadius">@dimen/shadowDP</item>
    </style>

    <style name="CardImagenGeneral">
        <item name="cardCornerRadius">@dimen/viewPaddingSmall</item>
        <item name="cardElevation">@dimen/width14</item>
    </style>

    <style name="CardImagenJuegoPlataforma">
        <item name="android:layout_margin">@dimen/viewPaddingSmall</item>
        <item name="cardCornerRadius">@dimen/viewPaddingSmall</item>
        <item name="cardElevation">@dimen/width14</item>
    </style>

    <style name="CardImagenSearch">
        <item name="android:layout_marginTop">@dimen/width4</item>
        <item name="android:layout_marginBottom">@dimen/width4</item>
        <item name="android:layout_marginStart">@dimen/viewPaddingSmall</item>
        <item name="android:layout_marginEnd">@dimen/viewPaddingSmall</item>
        <item name="cardCornerRadius">@dimen/viewPaddingSmall</item>
        <item name="cardElevation">@dimen/width14</item>
    </style>

</resources>
